<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:background="@drawable/testing">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:background="@drawable/shadow">

</RelativeLayout>
  <TextView
      android:id="@+id/tv"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:text="HAJAMA"
      android:textColor="@color/WhiteColor"
      android:textSize="40sp"
      android:layout_marginTop="20dp"
      android:fontFamily="serif-monospace"
      android:textStyle="bold"
      android:layout_marginEnd="210dp"
      android:layout_marginStart="40dp">
  </TextView>

<LinearLayout
    android:id="@+id/l1"
    android:layout_width="match_parent"
    android:layout_height="50dp"
 android:orientation="horizontal"
    android:layout_below="@id/tv"
    android:layout_margin="5dp">
 <TextView
     android:id="@+id/cn"
     android:layout_width="100dp"
     android:layout_height="40dp"
     android:text="Hello"
     android:fontFamily="sans-serif-thin"
     android:textSize="32sp"
     android:gravity="center|right"
     android:textColor="@color/WhiteColor">
 </TextView>
 <TextView
     android:layout_width="200dp"
     android:layout_height="40dp"
     android:text="Muhammad"
     android:fontFamily="serif-monospace"
     android:textSize="32sp"
     android:gravity="center"
     android:textColor="@color/WhiteColor"
     >

 </TextView>
</LinearLayout>
 <RelativeLayout
     android:id="@+id/Rsearch"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@id/l1"
     android:layout_marginTop="2dp">

  <com.google.android.material.appbar.CollapsingToolbarLayout
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:elevation="10dp"
      android:layout_marginStart="35dp"
      android:layout_marginEnd="35dp">
   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       app:cardCornerRadius="16dp">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:gravity="center"
       android:layout_marginStart="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="horizontal">

     <EditText
         android:id="@+id/editMobileNo"
         android:layout_width="250dp"
         android:layout_height="match_parent"
         android:background="@color/white"
         android:ems="10"
         android:gravity="center"
         android:hint="Search"
         android:textColorHint="@color/UiColor"
         >
     </EditText>

     <ImageView
         android:id="@+id/search"
         android:layout_width="50dp"
         android:layout_height="40dp"
         android:layout_gravity="center"
         android:src="@drawable/ic_baseline_search_24"
         >
     </ImageView>


    </LinearLayout>

   </LinearLayout>
   </androidx.cardview.widget.CardView>

  </com.google.android.material.appbar.CollapsingToolbarLayout>

 </RelativeLayout>


 <LinearLayout
     android:id="@+id/imgRL"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@+id/Rsearch"
     android:layout_marginTop="20dp"
     android:orientation="horizontal"
     android:weightSum="4"
     android:layout_marginStart="20dp">


   <androidx.cardview.widget.CardView
       android:id="@+id/chat"
       android:layout_width="40dp"
       android:layout_height="70dp"
       app:cardCornerRadius="12dp"
       android:layout_weight="1"
       android:layout_margin="20dp"
       >

    <ImageView
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:src="@drawable/chat_bubble1"
        android:layout_gravity="center"
        >

    </ImageView>

   </androidx.cardview.widget.CardView>

   <androidx.cardview.widget.CardView
       android:layout_width="40dp"
       android:layout_height="70dp"
       app:cardCornerRadius="12dp"
       android:layout_weight="1"
       android:layout_margin="20dp">
    <ImageView
        android:id="@+id/appointment"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/appointment1"
        android:layout_gravity="center">
    </ImageView>
   </androidx.cardview.widget.CardView>
  <androidx.cardview.widget.CardView
      android:layout_width="40dp"
      android:layout_height="70dp"
      app:cardCornerRadius="12dp"
      android:layout_weight="1"
      android:layout_margin="20dp">
   <ImageView
       android:id="@+id/labtest"
       android:layout_width="50dp"
       android:layout_height="wrap_content"
       android:layout_weight="1"
       android:src="@drawable/lab_test"
       android:layout_gravity="center">
   </ImageView>
  </androidx.cardview.widget.CardView>


 </LinearLayout>
<LinearLayout
    android:id="@+id/txtRl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/imgRL"
    android:orientation="horizontal">
 <TextView
     android:layout_width="90dp"
     android:layout_height="wrap_content"
     android:text="Chat Doctor"
     android:textSize="16sp"
     android:layout_marginStart="50dp"
     android:textColor="@android:color/darker_gray"
     />
 <TextView
     android:layout_width="100dp"
     android:layout_height="wrap_content"
     android:text="Appointment"
     android:textSize="16sp"
     android:layout_marginStart="30dp"
     android:textColor="@android:color/darker_gray"
     />
 <TextView
     android:layout_width="100dp"
     android:layout_height="wrap_content"
     android:text="Lab Test"
     android:textSize="16sp"
     android:layout_marginStart="30dp"
     android:textColor="@android:color/darker_gray"
     />
</LinearLayout>

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_below="@+id/txtRl"
     android:layout_marginTop="12dp"
     android:orientation="vertical">
  <ImageView
      android:id="@+id/location1"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:src="@drawable/location">

  </ImageView>

 </LinearLayout>




</RelativeLayout>